<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/DebugDrawerRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/debug_drawer_default_list_item_padding"
    android:layout_marginRight="@dimen/debug_drawer_default_list_item_padding"
    android:minHeight="?android:listPreferredItemHeight"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        style="@style/DebugDrawerSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/value"
        style="@style/DebugDrawerSettingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>